<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/red_bg">
    
    <ImageView 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:src="@drawable/bg_sell"
    	android:contentDescription="@string/image_descriptor"
    	android:scaleType="fitXY"/>
    
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:padding="10dp"
    	android:layout_marginTop="40dp"
    	android:background="#80000000"
    	android:gravity="center"
    	android:textColor="@android:color/white"
    	android:text="@string/take_the_clear_snap_of_the_item_you_are_selling_n_this_is_the_first_picture_shoppers_will_see_so_make_sure_you_capture_it_from_top_to_bottom_"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="50dp"
    	android:weightSum="2">
        
        <RelativeLayout 
            android:id="@+id/camera"
            android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:padding="20dp"
    		android:background="@drawable/trans_button_selector">
            
            <ImageView 
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:contentDescription="@string/image_descriptor"
    			android:src="@drawable/ic_camera"
    			android:layout_centerInParent="true"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/gallery"
            android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:padding="20dp"
    		android:background="@drawable/trans_button_selector">
            
            <ImageView 
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:contentDescription="@string/image_descriptor"
    			android:src="@drawable/ic_gallery"
    			android:layout_centerInParent="true"/>
            
        </RelativeLayout>
        
    </LinearLayout>

</RelativeLayout>
